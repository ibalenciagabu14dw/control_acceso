extends layout

block content
  h1#titulo= title
  h3 Agregar Profesor
    form#agregarProfesorForm.form-group()
      label(for='dni') dni
      input#dni.form-control(type='text', name='dni')
      #mensaje.alert.alert-error.fade.in(style='display: none')
        a.close(href='#', data-dismiss='alert') Ã—
        strong Comprueba!
        span  Dni ya existente
      br
      label(for='nombre') nombre
      input#nombre.form-control(type='text', name='nombre')
      br
      label(for='apellidos') apellidos
      input#apellidos.form-control(type='text', name='apellidos')
      br
      label(for='correo') correo
      input#correo.form-control(type='text', name='correo')
      br
      label(for='password') password
      input#password.form-control(type='password', name='password')
      label(for='foto') foto
      input#foto.form-control(type='file', name='foto', accept='image/*')
      br
      label(for='num_tarjeta') num_tarjeta
      input#num_tarjeta.form-control(type='text', name='num_tarjeta' )
      br
      button#send.btn.btn-primary(name='send') Enviar
      a#enlace.btn.btn-primary(href='/config/configPersonas') Volver
  script
    include ../public/js/agregarProfesor.js